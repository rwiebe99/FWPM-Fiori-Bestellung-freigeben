<mvc:View
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="acceptpurchaseorder.controller.Master">
	<Page title="Orders List">
		
		<List id="list" 
				items="{invoice>/A_PurchaseOrder}"
				mode="SingleSelectMaster"
				selectionChange="onSelectionChange">

				<ObjectListItem
				title="{invoice>PurchaseOrder}"
				icon="sap-icon://product"
				type="Active"
				press="onListItemPress"
			>
			</ObjectListItem>
			
		</List>
	</Page>
</mvc:View>
