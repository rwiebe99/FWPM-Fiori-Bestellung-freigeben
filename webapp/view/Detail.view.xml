<mvc:View xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:m="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" controllerName="acceptpurchaseorder.controller.Detail">
	<Page title="" navButtonPress="onNavBack" showNavButton="{device>/system/phone}">
		<content>
			<ObjectHeader intro="Purchase Order:" title="{data>PurchaseOrder}" icon="sap-icon://cart" number=" " numberUnit="{data>DocumentCurrency}" numberState="None" titleActive="false" backgroundDesign="Translucent" condensed="false" visible="true"/>

			<IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter icon="sap-icon://hint" key="info">
						<content>
							<f:Form>
								<f:layout>
									<f:ResponsiveGridLayout labelSpanXL="6" labelSpanL="6" labelSpanM="6" labelSpanS="6" adjustLabelSpan="true" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" breakpointXL="1440" breakpointL="1024" breakpointM="600"/>
								</f:layout>
								<f:formContainers>
									<f:FormContainer>
										<f:title>
											<core:Title text="{i18n>generalInformation}" level="H2" icon="sap-icon://document-text"/>
										</f:title>
										<f:formElements>
											<f:FormElement>
												<f:label>
													<Label text="{i18n>orderID}"/>
												</f:label>
												<f:fields>
													<Text text="{data>PurchaseOrder}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="{i18n>creator}"/>
												</f:label>
												<f:fields>
													<Text text="{data>CreatedByUser}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="{i18n>created}"/>
												</f:label>
												<f:fields>
													<Text text="{path: 'data>PurchaseOrderDate' , formatter:'.dateFormatter2' }" />
												</f:fields>
											</f:FormElement>
										</f:formElements>
									</f:FormContainer>

									<f:FormContainer>
										<f:title>
											<core:Title text="{i18n>supplierInformation}" level="H2" icon="sap-icon://supplier"/>
										</f:title>
										<f:formElements>
											<f:FormElement>
												<f:label>
													<Label text="{i18n>supplier}"/>
												</f:label>
												<f:fields>
													<Text text="{data>Supplier}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="{i18n>city}"/>
												</f:label>
												<f:fields>
													<Text text="{data>AddressPostalCode} {data>AddressCityName}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="{i18n>country}"/>
												</f:label>
												<f:fields>
													<Text text="{data>AddressCountry}" />
												</f:fields>
											</f:FormElement>
										</f:formElements>
									</f:FormContainer>

									<f:FormContainer>
										<f:title>
											<core:Title text="{i18n>purchaseOrderDetails}" level="H2" icon="sap-icon://database"/>
										</f:title>
										<f:formElements>
											<f:FormElement>
												<f:label>
													<Label text="{i18n>purchaseOrderType}"/>
												</f:label>
												<f:fields>
													<Text text="{data>PurchaseOrderType}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="{i18n>purchasingProcessingStatus}"/>
												</f:label>
												<f:fields>
													<Text text="{data>PurchasingProcessingStatus}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="{i18n>language}"/>
												</f:label>
												<f:fields>
													<Text text="{data>Language}" />
												</f:fields>
											</f:FormElement>
										</f:formElements>
									</f:FormContainer>

									<f:FormContainer>
										<f:title>
											<core:Title text="{i18n>paymentInformations}" level="H2" icon="sap-icon://simple-payment"/>
										</f:title>
										<f:formElements>
											<f:FormElement>
												<f:label>
													<Label text="{i18n>paymentTerms}"/>
												</f:label>
												<f:fields>
													<Text text="{data>PaymentTerms}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="{i18n>cash-DiscountDay1}"/>
												</f:label>
												<f:fields>
													<Text text="{data>CashDiscount1Days}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="{i18n>cash-DiscountDay2}"/>
												</f:label>
												<f:fields>
													<Text text="{data>CashDiscount2Days}" />
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="{i18n>cashDiscountPercent}"/>
												</f:label>
												<f:fields>
													<Text text="{data>CashDiscount1Percent}" />
												</f:fields>
											</f:FormElement>
										</f:formElements>
									</f:FormContainer>
								</f:formContainers>
							</f:Form>
						</content>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://product" key="product" count="">
						<content>
							<Table id="LIST" items="{path:'item>/d/results/'}">
								<columns>
									<Column width="150px">
										<Label text="{i18n>position}" />
									</Column>
									<Column demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline">
										<Label text="{i18n>product}" />
									</Column>

									<Column hAlign="End" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline">
										<Label text="{i18n>quantity}" />
									</Column>
									<Column hAlign="End">
										<Label text="{i18n>price}" />
									</Column>
								</columns>
								<items>
									<ColumnListItem vAlign="Middle">
										<cells>
											<Text text="{item>PurchaseOrderItem}" />
											<Text text="{item>PurchaseOrderItemText}" />
											<ObjectNumber number="{item>OrderQuantity}" unit="{item>OrderPriceUnit}" />
											<ObjectNumber number="{item>NetPriceAmount}" unit="{item>DocumentCurrency}" />
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</content>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://notes" key="notes" count="">
						<Text text="{notes>/}" />
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
				<content>
					<ToolbarSpacer width=""/>
					<Button text="{i18n>release}" type="Accept" icon="sap-icon://accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPressAccept"/>
					<Button text="{i18n>reject}" type="Reject" icon="sap-icon://decline" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPressDecline"/>
				</content>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>
