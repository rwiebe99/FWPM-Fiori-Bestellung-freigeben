<mvc:View xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc" controllerName="acceptpurchaseorder.controller.Detail">
	<Page title="" navButtonPress="onNavBack" showNavButton="{device>/system/phone}">
		<content>
			<ObjectHeader intro="Purchase Order:" title="{user>PurchaseOrder}" icon="sap-icon://cart" number="{path: 'item>NetPriceAmount' , formatter:'.gesamtPreis' }" numberUnit="{user>DocumentCurrency}" numberState="None" titleActive="false" backgroundDesign="Translucent" condensed="false" visible="true">
				<attributes/>
				<statuses>
					<ObjectStatus text="{path: 'user>CreationDate', type: 'sap.ui.model.type.DateTime',formatOptions: { pattern: 'dd.MM.yyyy'}}" state="None" visible="true"/>
				</statuses>
				<markers/>
			</ObjectHeader>

			<IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter icon="sap-icon://hint" key="info">
						<Title level="H3" text="General Information" />
						<OverflowToolbar width="100%" height="150px" design="Auto" enabled="true" visible="true">
							<content>
								<form:SimpleForm maxContainerCols="1" editable="false" layout="ResponsiveGridLayout" labelSpanL="12" labelSpanM="12" labelSpanS="6" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2" columnsS="2">
									<form:content>
										<m:Label text="Order ID"/>
										<m:Text text="{user>PurchaseOrder}"/>
										<m:Label text="Supplier"/>
										<m:Text text="{user>Supplier}"/>
										<m:Label text="Creation Date"/>
										<m:Text text="{path: 'user>PurchaseOrderDate' , formatter:'.dateFormatter2' }"/>
									</form:content>
								</form:SimpleForm>
							</content>
						</OverflowToolbar>
						<Table id="LIST" items="{path:'item>/d/results/'}">
							<columns>
								<Column width="250px" >
									<Label text="Position" />
								</Column>
								<Column demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline">
									<Label text="Product" />
								</Column>

								<Column   demandPopin="true"  minScreenWidth="Tablet" popinDisplay="Inline">
									<Label text="Quantity" />
								</Column>
								<Column >
									<Label text="Price" />
								</Column>
							</columns>
							<items>
								<ColumnListItem >
									<cells>
										<Text text="{item>PurchaseOrderItem}" />
										<Text text="{item>PurchaseOrderItemText}" />
										<Text text="{item>OrderQuantity} {item>OrderPriceUnit}" />
										<Text text="{item>NetPriceAmount} {item>DocumentCurrency}" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://notes" key="notes" count="12">
						<Text text="Notes go here ..." />
					</IconTabFilter>
				
				</items>
			</IconTabBar>

		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
				<content>
					<ToolbarSpacer width=""/>
					<Button text="Freigeben" type="Accept" icon="sap-icon://accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress"/>
					<Button text="Ablehnen" type="Reject" icon="sap-icon://decline" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress1"/>
				</content>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>
