<mvc:View xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:m="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" controllerName="acceptpurchaseorder.controller.Detail">
	<Page title="" navButtonPress="onNavBack" showNavButton="{device>/system/phone}">
		<content>
			<ObjectHeader intro="Purchase Order:" title="{data>PurchaseOrder}" icon="sap-icon://cart" number=" " numberUnit="{data>DocumentCurrency}" numberState="None" titleActive="false" backgroundDesign="Translucent" condensed="false" visible="true">
				<attributes/>
				<statuses>
					<!--<ObjectStatus text="TEST" state="None" visible="true"/>-->
				</statuses>
				<markers/>
			</ObjectHeader>

			<IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter icon="sap-icon://hint" key="info">
						<content>
							<f:Form>
								<f:layout>
									<f:ResponsiveGridLayout labelSpanXL="6" labelSpanL="6" labelSpanM="6" labelSpanS="6" adjustLabelSpan="true" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" breakpointXL="1440" breakpointL="1024" breakpointM="600"/>
								</f:layout>
								<f:formContainers>
									<f:FormContainer>
										<f:title>
											<core:Title text="General Information" level="H2" icon="sap-icon://document-text"/>
										</f:title>
										<f:formElements>
											<f:FormElement>
												<f:label>
													<Label text="Order ID"/>
												</f:label>
												<f:fields>
													<Text text="{data>PurchaseOrder}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="Created by"/>
												</f:label>
												<f:fields>
													<Text text="{data>CreatedByUser}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="Creation Date"/>
												</f:label>
												<f:fields>
													<Text text="{path: 'data>PurchaseOrderDate' , formatter:'.dateFormatter2' }" />
												</f:fields>
											</f:FormElement>
										</f:formElements>
									</f:FormContainer>

									<f:FormContainer>
										<f:title>
											<core:Title text="Supplier Informations" level="H2" icon="sap-icon://supplier"/>
										</f:title>
										<f:formElements>
											<f:FormElement>
												<f:label>
													<Label text="Supplier"/>
												</f:label>
												<f:fields>
													<Text text="{data>Supplier}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="City"/>
												</f:label>
												<f:fields>
													<Text text="{data>AddressPostalCode} {data>AddressCityName}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="Country"/>
												</f:label>
												<f:fields>
													<Text text="{data>AddressCountry}" />
												</f:fields>
											</f:FormElement>
										</f:formElements>
									</f:FormContainer>

									<f:FormContainer>
										<f:title>
											<core:Title text="Purchase Order Details" level="H2" icon="sap-icon://database"/>
										</f:title>
										<f:formElements>
											<f:FormElement>
												<f:label>
													<Label text="Purchase Order Type"/>
												</f:label>
												<f:fields>
													<Text text="{data>PurchaseOrderType}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="Purchasing Processing Status"/>
												</f:label>
												<f:fields>
													<Text text="{data>PurchasingProcessingStatus}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="Language"/>
												</f:label>
												<f:fields>
													<Text text="{data>Language}" />
												</f:fields>
											</f:FormElement>
										</f:formElements>
									</f:FormContainer>

									<f:FormContainer>
										<f:title>
											<core:Title text="Payment Informations" level="H2" icon="sap-icon://simple-payment"/>
										</f:title>
										<f:formElements>
											<f:FormElement>
												<f:label>
													<Label text="Payment Terms"/>
												</f:label>
												<f:fields>
													<Text text="{data>PaymentTerms}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="Cash-Discount 1 Day"/>
												</f:label>
												<f:fields>
													<Text text="{data>CashDiscount1Days}"/>
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="Cash-Discount 2 Days"/>
												</f:label>
												<f:fields>
													<Text text="{data>CashDiscount2Days}" />
												</f:fields>
											</f:FormElement>
											<f:FormElement>
												<f:label>
													<Label text="Cash Discount Percent"/>
												</f:label>
												<f:fields>
													<Text text="{data>CashDiscount1Percent}" />
												</f:fields>
											</f:FormElement>
										</f:formElements>
									</f:FormContainer>
								</f:formContainers>
							</f:Form>
						</content>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://product" key="product" count="">
						<content>
							<Table id="LIST" items="{path:'item>/d/results/'}">
								<columns>
									<Column width="150px">
										<Label text="Position" />
									</Column>
									<Column demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline">
										<Label text="Product" />
									</Column>

									<Column hAlign="End" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline">
										<Label text="Quantity" />
									</Column>
									<Column hAlign="End">
										<Label text="Price" />
									</Column>
								</columns>
								<items>
									<ColumnListItem vAlign="Middle">
										<cells>
											<Text text="{item>PurchaseOrderItem}" />
											<Text text="{item>PurchaseOrderItemText}" />
											<ObjectNumber number="{item>OrderQuantity}" unit="{item>OrderPriceUnit}"  />
											<ObjectNumber number="{item>NetPriceAmount}" unit="{item>DocumentCurrency}" />
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</content>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://notes" key="notes" count="">
						<Text text="{notes>/}" />
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
				<content>
					<ToolbarSpacer width=""/>
					<Button text="Freigeben" type="Accept" icon="sap-icon://accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress"/>
					<Button text="Ablehnen" type="Reject" icon="sap-icon://decline" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress1"/>
				</content>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>
