<mvc:View xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc" controllerName="acceptpurchaseorder.controller.Detail">
	<Page title="" navButtonPress="onNavBack" showNavButton="{device>/system/phone}">
		<content>
			<ObjectHeader intro="Purchase Order:" title="{user>PurchaseOrder}" icon="sap-icon://cart" number="200,00" numberUnit="USD" numberState="None" titleActive="false" backgroundDesign="Translucent" condensed="false" visible="true">
				<attributes/>
				<statuses>
					<ObjectStatus text="{user>PurchasingProcessingStatus}" state="Success" visible="true"/>
				</statuses>
				<markers/>
			</ObjectHeader>

			<IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter icon="sap-icon://hint" key="info">
						<Title level="H3" text="{user>PurchaseOrder}" />
						<Table id="LIST" mode="SingleSelectLeft" items="{path:'item>/d/results/', filters: [{path:'PurchaseOrder' , operator: 'EQ', value1:'4500000001'}] }">
							<columns>
								<Column width="12em">
									<Text text="Product" />
								</Column>
							</columns>
							<items>
								<ColumnListItem vAlign="Middle">
									<cells>

										<Text text="{item>PurchaseOrderItem}" />

									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://attachment" key="attachments" count="3">
						<Text text="Attachments go here ..." />
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://notes" key="notes" count="12">
						<Text text="Notes go here ..." />
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://group" key="people">
						<Text text="People content goes here ..." />
					</IconTabFilter>
				</items>
			</IconTabBar>

		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
				<content>
					<ToolbarSpacer width=""/>
					<Button text="Freigeben" type="Accept" icon="sap-icon://accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress"/>
					<Button text="Ablehnen" type="Reject" icon="sap-icon://decline" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress1"/>
				</content>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>
